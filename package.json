{
  "name": "@lostcities-cloud/lostcities-frontend",
  "version": "0.1.5",
  "private": false,
  "repository": "https://github.com/lostcities-cloud/lostcities-frontend",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "description": "",
  "scripts": {
    "serve": "vue-cli-service serve --config vue.config.js",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "npm run lint && npm run unit",
    "unit": "jest",
    "pack": "cp package.json ./dist && npm pack ./dist && mv lostcities-cloud-lostcities-frontend-*.tgz ./dist/lostcities-frontend.tgz",
    "publish": "gh release create 0.1.5 --latest dist/lostcities-frontend.tgz",
    "build-docker": "docker build . -t ghcr.io/lostcities-cloud/lostcities-frontend",
    "push-docker": "docker push ghcr.io/lostcities-cloud/lostcities-frontend"
  },
  "dependencies": {
    "axios": "0.21.1",
    "bootstrap": "4.5.3",
    "bootstrap-vue": "2.21.2",
    "net": "^1.0.2",
    "node-sass": "^7.0.1",
    "sockjs-client": "1.5.2",
    "stompjs": "^2.3.3",
    "vue": "^2.6.11",
    "vue-notification": "^1.3.20",
    "vue-router": "3.5.2",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~5.0.1",
    "@vue/cli-plugin-eslint": "~5.0.1",
    "@vue/cli-service": "~5.0.1",
    "@vue/test-utils": "^1.0.0-beta.24",
    "babel-eslint": "^10.0.3",
    "eslint": "^7.5.0",
    "eslint-plugin-vue": "^8.5.0",
    "jest": "^21.1.0",
    "jest-serializer-vue": "^0.2.0",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.6.11"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "no-debugger": 1,
      "vue/multi-word-component-names": [
        "error",
        {
          "ignores": [
            "game",
            "discard",
            "login",
            "matches",
            "register"
          ]
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "/opt/node/node_modules"
    ],
    "transform": {
      "^.+\\.js$": "/opt/node/node_modules/babel-jest",
      ".*\\.(vue)$": "/opt/node/node_modules/vue-jest"
    },
    "snapshotSerializers": [
      "/opt/node/node_modules/jest-serializer-vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "keywords": []
}
